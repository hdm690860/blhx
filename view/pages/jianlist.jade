extends ../layout

block content
	.wikimain
		.wikimainbox.clearfix
			.hr10
			.row.list
				table.table.table-hover.table-bordered
					thead
						tr
							th 编号
							th 名字
							th 类型
							th 图片
							th 录入时间
							th 查看
							th 更新
							th 删除
					tbody
						each item in jians
							tr(class="item-id-#{item._id}")
								td #{item.number}
								td #{item.name}
								td #{item.style}
								td #{item.touxiang}
								td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
								td: a(target="_blank", href="/detail/#{item._id}") 查看
								td: a(target="_blank", href="../updata/#{item._id}") 修改
								td
									button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
	include ../includes/footer
	script(src='../public/js/delete.js')