extends ../layout

block content
	.wikimain
		.wikimainbox.clearfix
			.hr10
			.row.list
				table.table.table-hover.table-bordered
					thead
						tr
							th 名字
							th 密码
							th 权限
							th 录入时间
							th 修改权限
							th 删除
					tbody
						each item in users
							tr(class="item-id-#{item._id}")
								td #{item.name}
								td #{item.password}
								td #{item.role}
								td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
								td: a(target="_blank", href="/user/#{item._id}") 修改
								td
									button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
	include ../includes/footer
	script(src='../public/js/deleteuser.js')